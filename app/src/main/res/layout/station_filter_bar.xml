<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chipScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleLine="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/toggleSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.MaterialComponents"
            app:chipSurfaceColor="@color/fullTransparent"
            app:chipStrokeColor="@color/chipForeground"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_arrow_drop_up_24"
            app:closeIconEnabled="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/photoFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.MaterialComponents"
            app:chipSurfaceColor="@color/fullTransparent"
            app:chipStrokeColor="@color/chipForeground"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_arrow_drop_up_24"
            app:closeIconEnabled="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/activeFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.MaterialComponents"
            app:chipSurfaceColor="@color/fullTransparent"
            app:chipStrokeColor="@color/chipForeground"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_arrow_drop_up_24"
            app:closeIconEnabled="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/nicknameFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.MaterialComponents"
            app:chipSurfaceColor="@color/fullTransparent"
            app:chipStrokeColor="@color/chipForeground"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_arrow_drop_up_24"
            app:closeIconEnabled="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/countrySelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.MaterialComponents"
            app:chipSurfaceColor="@color/fullTransparent"
            app:chipStrokeColor="@color/chipForeground"
            app:chipStrokeWidth="1dp"
            app:closeIcon="@drawable/ic_baseline_arrow_drop_up_24"
            app:closeIconEnabled="true" />

    </com.google.android.material.chip.ChipGroup>
</HorizontalScrollView>
